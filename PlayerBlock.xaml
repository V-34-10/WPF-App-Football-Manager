<UserControl x:Class="Football_Manager_2023.PlayerBlock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Football_Manager_2023"
             mc:Ignorable="d"
        Height="140" Width="90" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Border>
        <Grid>
            <Image Source="{Binding Image}" Height="120" Width="80" Stretch="Uniform" VerticalAlignment="Top"/>
            <TextBlock Text="{Binding Text}" VerticalAlignment="Bottom"  FontSize="12" Foreground="White" FontFamily="Arial" FontWeight="Bold" TextAlignment="Center"/>
        </Grid>
    </Border>
    
</UserControl>
